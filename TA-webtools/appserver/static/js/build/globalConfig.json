                            "options": {
                                "endpointUrl": "data/indexes", 
                                "blackList": "^_.*$", 
                                "createSearchChoice": true
                            }
                        }, 
                        {
                            "type": "radio", 
                            "label": "HTTP Method", 
                            "defaultValue": "get", 
                            "field": "http_method", 
                            "help": "", 
                            "required": true, 
                            "options": {
                                "items": [
                                    {
                                        "value": "get", 
                                        "label": "Get"
                                    }, 
                                    {
                                        "value": "post", 
                                        "label": "Post"
                                    }, 
                                    {
                                        "value": "delete", 
                                        "label": "Delete"
                                    }
                                ]
                            }
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "URI", 
                            "defaultValue": "https://localhost:8089", 
                            "field": "uri", 
                            "help": "", 
                            "required": true
                        }, 
                        {
                            "type": "radio", 
                            "label": "Verify SSL", 
                            "defaultValue": "0", 
                            "field": "verify_ssl", 
                            "help": "", 
                            "required": false, 
                            "options": {
                                "items": [
                                    {
                                        "value": "1", 
                                        "label": "True"
                                    }, 
                                    {
                                        "value": "0", 
                                        "label": "False"
                                    }
                                ]
                            }
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Request Headers", 
                            "field": "request_headers", 
                            "help": "JSON formated HTTP Headers", 
                            "required": false, 
                            "options": {
                                "placeholder": "{\"Content-Type\": \"application/json\", \"user-agent\":\"my-app/0.0.1\"}"
                            }
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Payload", 
                            "field": "payload", 
                            "help": "JSON formated payload to send with the request.", 
                            "required": false, 
                            "options": {
                                "placeholder": "{\"foo\":\"bar\"}"
                            }
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Username", 
                            "field": "username", 
                            "help": "", 
                            "required": false
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of password is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Password", 
                            "options": {
                                "placeholder": "******"
                            }, 
                            "field": "password", 
                            "help": "", 
                            "required": false, 
                            "encrypted": true
                        }
                    ], 
                    "title": "Curl Inputs"
                }
            ], 
