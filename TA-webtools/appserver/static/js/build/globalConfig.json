{
    "meta": {
        "restRoot": "TA_webtools", 
        "apiVersion": "3.0.0", 
        "name": "TA-webtools", 
        "displayName": "Webtools", 
        "version": "1.0.0"
    }, 
    "pages": {
        "inputs": {
            "description": "Manage your data inputs", 
            "services": [
                {
                    "name": "test_port_input", 
                    "entity": [
                        {
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }, 
                                {
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "maxLength": 100
                                }
                            ], 
                            "type": "text", 
                            "label": "Name", 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer."
                                }
                            ], 
                            "type": "text", 
                            "label": "Interval", 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "type": "string", 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "maxLength": 80
                                }
                            ], 
                            "type": "singleSelect", 
                            "label": "Index", 
                            "defaultValue": "default", 
                            "field": "index", 
                            "required": true, 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "blackList": "^_.*$", 
                                "createSearchChoice": true
                            }
                        }, 
                        {
                            "type": "radio", 
                            "label": "Protocol", 
                            "defaultValue": "1", 
                            "field": "protocol", 
                            "help": "", 
                            "required": true, 
                            "options": {
                                "items": [
                                    {
                                        "value": "1", 
                                        "label": "TCP"
                                    }, 
                                    {
                                        "value": "0", 
                                        "label": "UDP"
                                    }
                                ]
                            }
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Address", 
                            "defaultValue": "127.0.0.1", 
                            "field": "address", 
                            "help": "", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Port", 
                            "defaultValue": "8000", 
                            "field": "port", 
                            "help": "", 
                            "required": true
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Count", 
                            "defaultValue": "1", 
                            "field": "count", 
                            "help": "Applicable only to UDP protocol", 
                            "required": false
                        }, 
                        {
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "maxLength": 8192
                                }
                            ], 
                            "type": "text", 
                            "label": "Timeout", 
                            "defaultValue": "2", 
                            "field": "timeout", 
                            "help": "", 
                            "required": false
                        }
                    ], 
                    "title": "Test Port Input"
                }, 
                {
                    "name": "curl_inputs", 
